<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
    <xacro:property name="PI" value="3.1416"/>


    <!-- Define material named "black" with RGBA color values -->
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
    </material>

    <!-- Define material named "blue" with RGBA color values -->
    <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0" />
    </material>

    <!-- Define material named "green" with RGBA color values -->
    <material name="green">
        <color rgba="0.0 0.8 0.0 1.0" />
    </material>
    
    <!-- Define material named "red" with RGBA color values -->
    <material name="red">
        <color rgba="0.8 0.0 0.0 1.0" />
    </material>



    <!-- Define link named "world" -->
    <link name="world" />

    <!-- Define link named "base" -->
    <link name="base">
        <collision>
            <origin xyz="0 0 0.005" rpy="0 0 0" />
            <geometry>
                <box size="0.113 0.133 0.01" />
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0.005" rpy="0 0 0" />
            <geometry>
                <box size="0.113 0.133 0.01" />
            </geometry>
            <material name="green" />
        </visual>

    </link>

    <link name="base_link"/>
     <!-- 连接 base 和 base_link -->
    <joint name="base_to_base_link" type="fixed">
        <parent link="base"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Define link named "rotor1" -->
    <link name="rotor1">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.0325" length="0.0256" />
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.0325" length="0.0256" />
            </geometry>
            <material name="red" />
        </visual>

    </link>

    <!-- Define link named "rotor2" -->
    <link name="rotor2">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.0325" length="0.0256" />
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.0325" length="0.0256" />
            </geometry>
            <material name="red" />
        </visual>

    </link>

    <!-- Define joint named "joint1" with type "fixed" -->
    <joint name="joint1" type="fixed">
        <parent link="world" />
        <child link="base" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- Define joint named "joint2" with type "continuous" -->
    <joint name="joint2" type="continuous">
        <parent link="base" />
        <child link="rotor1" />
        <origin xyz="0.091 0 0" rpy="0 1.5708 0" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- Define joint named "joint3" with type "continuous" -->
    <joint name="joint3" type="continuous">
        <parent link="base" />
        <child link="rotor2" />
        <origin xyz="-0.091 0 0" rpy="0 1.5708 0" />
        <axis xyz="0 0 1" />
    </joint>


  <ros2_control name="arduino_actuator_ros2_control" type="system">
    <hardware>
      <plugin>arduino_controller/ArduinoInterface</plugin>
        <param name="port">/dev/ttyACM0</param>

    </hardware>


    <joint name="joint2">
        <command_interface name="velocity">
        </command_interface>
        <state_interface name="velocity"/>
        <state_interface name="position"/>
    </joint>
            
    <joint name="joint3">
        <command_interface name="velocity">
        </command_interface>
        <state_interface name="velocity"/>
        <state_interface name="position"/>
    </joint>


  </ros2_control>


</robot>